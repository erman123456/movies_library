datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_SQLITE")
}
model Accounts {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  email     String  @unique
  password  String

  @@map("accounts")
}

model Actors {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  gender    String
  age       Int
  Movies    Movies[]

  @@map("actors")
}

model Authors {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  gender    String
  age       Int
  Movies    Movies[]

  @@map("authors")
}

model Movies {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  title       String
  description String?
  actorId     Int?
  authorId    Int?
  actor       Actors?  @relation(fields: [actorId], references: [id])
  author      Authors? @relation(fields: [authorId], references: [id])

  @@map("movies")
}
